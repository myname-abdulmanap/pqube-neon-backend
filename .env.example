# Database URL - PostgreSQL
# Local: postgresql://postgres:password@localhost:5432/database
# Docker: postgresql://postgres:password@postgres:5432/database
DATABASE_URL="postgresql://postgres:password@localhost:5432/pqube_neon"
DIRECT_URL="postgresql://postgres:password@localhost:5432/pqube_neon"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=4000
NODE_ENV=development

# CORS
CORS_ORIGIN="http://localhost:3000"

# ========== Docker Deployment ==========
# Untuk deployment dengan docker-compose.yml

# GitHub Repository (format: username/repo-name)
GITHUB_REPO=your-username/backend-repo

# Database (untuk docker-compose)
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=energy_monitoring

# Docker image tag
TAG=latest
